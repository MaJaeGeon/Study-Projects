<Window x:Class="Binding.DataContextBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding"
        mc:Ignorable="d"
        Title="DataContextBinding" Height="350" Width="300">
    <StackPanel>
        <TextBlock Text="Name :"></TextBlock>
        <TextBox Text="{Binding Name}"></TextBox>
        
        <TextBlock Text="Age :"></TextBlock>
        <TextBox Text="{Binding Age}"></TextBox>
        
        <TextBlock Text="Birth :"></TextBlock>
        <TextBox Text="{Binding Birth}"></TextBox>
    </StackPanel>
</Window>
