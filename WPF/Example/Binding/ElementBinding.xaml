<Window x:Class="Binding.ElementBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding"
        mc:Ignorable="d"
        Title="ElementBinding" Height="350" Width="300">
    <StackPanel>
        <TextBlock Text="Input :"></TextBlock>
        <TextBox x:Name="txtbox_Input"></TextBox>

        <TextBlock Text="Output :"></TextBlock>
        <TextBlock Text="{Binding ElementName=txtbox_Input, Path=Text}"></TextBlock>
    </StackPanel>
</Window>
